{{!
    @template unilabeltype_imageboard/imageboard
    Template to show a bootstrap modal dialog.

    Example context (json):
    {
      "showintro": false,
      "intro": "",
      "images": [
        {
          "id": "9",
          "imageboardid": "1",
          "title": "",
          "url": "http:\/\/localhost:8000\/mod\/forum\/view.php?id=136",
          "xposition": "150",
          "yposition": "100",
          "targetwidth": "80",
          "targetheight": "0",
          "imageurl": {},
          "nr": 0
        },
        {
          "id": "10",
          "imageboardid": "1",
          "title": "",
          "url": "",
          "xposition": "400",
          "yposition": "200",
          "targetwidth": "0",
          "targetheight": "0",
          "imageurl": {http:\/\/localhost:8000\/mod\/forum\/view.php?id=137},
          "nr": 1
        }
      ],
      "hasimages": true,
      "cmid": "140",
      "canvaswidth": "500",
      "autocanvaswidth": false,
      "canvasheight": "600",
      "autocanvasheight": false,
      "backgroundimage": {},
      "capababilityforgrid": true,
      "showborders": true,
      "bordercolor": "#2D57FA",
      "gridcolor": "#B7009E"
    }
}}

{{#showintro}}
    {{{intro}}}
{{/showintro}}

<!-- store the data for this board -->
<div class="imageboard-{{cmid}}"
    data-id="{{cmid}}"
    data-canvaswidth="{{canvaswidth}}"
    data-canvasheight="{{canvasheight}}"
    data-backgroundimage="{{backgroundimage}}"
    data-capababilityforgrid="{{capababilityforgrid}}"
    data-showborders="{{showborders}}"
    data-bordercolor="{{bordercolor}}"
    data-gridcolor="{{gridcolor}}">
</div>

<!-- store each images data -->
{{#images}}
    <div class="imageboardimage-{{cmid}}"
         data-id="{{id}}"
         data-imageboardid="{{imageboardid}}"
         data-title="{{title}}"
         data-url="{{url}}"
         data-xposition="{{xposition}}"
         data-yposition="{{yposition}}"
         data-targetwidth="{{targetwidth}}"
         data-targetheight="{{targetheight}}"
         data-imageurl="{{imageurl}}">
    </div>
{{/images}}

<canvas id="unilabeltype-imageboard-canvas-{{cmid}}">
    This canvas includes some images that can be clicked to jump to different urls ...
</canvas>

{{#js}}
    require(['unilabeltype_imageboard/imageboardrenderer'],
        function(imageboardrenderer) {
            imageboardrenderer.init({{cmid}});
        }
    );
{{/js}}
